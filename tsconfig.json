{
  "compilerOptions": {
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "module": "node16",
    "lib": [
      "DOM",
      "ES2020",
    ],
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "main.ts"
  ]
}
